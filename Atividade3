// Receba a cotação do dólar em reais e um valor que o usuário possui em dólares.
//Imprima este valor em reais.

#include <stdio.h>

int main() {
    float precoDoDolar, valorEmDolar, valorEmReais;

    printf("Insira a cotação do dólar em reais(isto é, insira quantos reais equivalem a 1 US$): ");
    scanf("%f", &precoDoDolar);

    printf("Insira o valor em dólar: ");
    scanf("%f", &valorEmDolar);

    valorEmReais = valorEmDolar * precoDoDolar;

    printf("Realizada a operação, o valor em reais é: R$ %.2f\n", valorEmReais);

    return 0;
}